set number
set nohls
set incsearch
set showmatch
set tabstop=2
set shiftwidth=2
set nocompatible
set autoindent
set smartindent
set ruler

syntax on

set equalalways
set backspace=indent,eol,start

set laststatus=2
set stl=%f\ %m\ %r\ Line:%l/%L[%p%%]\ Col:%c\ Buf:%n\ [%b][0x%B]
set statusline+=%=
set statusline+=%#statuserror#

set nobackup
set nowb
set noswapfile
